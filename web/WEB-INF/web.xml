<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>BaseServlet</servlet-name>
        <servlet-class>com.inventory.servlet.BaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BaseServlet</servlet-name>
        <url-pattern>/BaseServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.inventory.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.inventory.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.inventory.servlet.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/EmployeeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BoardServlet</servlet-name>
        <servlet-class>com.inventory.servlet.BoardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BoardServlet</servlet-name>
        <url-pattern>/BoardServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.inventory.servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/CategoryServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SupplierServlet</servlet-name>
        <servlet-class>com.inventory.servlet.SupplierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SupplierServlet</servlet-name>
        <url-pattern>/SupplierServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoodsServlet</servlet-name>
        <servlet-class>com.inventory.servlet.GoodsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsServlet</servlet-name>
        <url-pattern>/GoodsServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>GqspServlet</servlet-name>
        <servlet-class>com.inventory.servlet.GqspServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GqspServlet</servlet-name>
        <url-pattern>/GqspServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CrkServlet</servlet-name>
        <servlet-class>com.inventory.servlet.CrkServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrkServlet</servlet-name>
        <url-pattern>/CrkServlet</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.inventory.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.inventory.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/WEB-INF/view/main.jsp</url-pattern>
    </filter-mapping>
</web-app>